@model MezunBilgiSistemi.ViewModels.DuyuruViewModel
@{
    ViewData["Title"] = "DuyuruEkle";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<h2>Duyuru Ekle</h2>
<div class="card">
    <div class="card-body">
        <form method="post" asp-action="DuyuruEkle" enctype="multipart/form-data" class="mt-3">
            <div class="form-group row">
                <div class="col-lg-12">
                    <div class="col-lg-6">

                        <label class="col-form-label">Duyuru Başlık</label>
                        <div class="">
                            <input asp-for="DuyuruAd" class="form-control">
                            <span asp-validation-for="DuyuruAd" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <label class=" col-form-label">Fotoğraf Seçiniz</label>
                        <div class="col-sm-10 custom-file">
                            <input asp-for="DuyuruImage" class="custom-file-input col-sm-10" id="customFile">
                            <label class="custom-file-label" for="customFile">Dosya Seçiniz</label>
                        </div>
                    </div>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <div class="col-lg-6">
                        <label class=" col-form-label">Duyuru Açıklaması</label>
                        <div class="">
                            <textarea asp-for="DuyuruAciklama" class="form-control"></textarea>
                            <span asp-validation-for="DuyuruAciklama" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 custom-control custom-checkbox">
                        <input asp-for="Ishome" type="checkbox" class="custom-control-input">
                        <label asp-for="Ishome" class="custom-control-label mt-5 ml-4">Anasayfada Görün</label>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-sm-12 right">
                            <button type="submit" class="btn btn-primary btn-sm">Kaydet</button>
                            <a asp-action="Duyurular" class="btn btn-secondary btn-sm">İptal</a>
                        </div>
                    </div>
</form>
    </div>
</div>
        <script type="text/javascript">

            // Add the following code if you want the name of the file appear on select
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
        </script>
