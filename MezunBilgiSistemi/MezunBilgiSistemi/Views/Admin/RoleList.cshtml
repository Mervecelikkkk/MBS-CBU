
@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<div class="content-col w-100 pb-5">
    <form asp-controller="Admin" asp-action="RoleList">
        <div class="container-fluid">
            <div class="col-12">
                <div class="row">
                    <div class="col-12 col-lg-10">
                        <div class="page-baslik">
                            <h2 class="mb-3 mt-3">Role Ekle</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 ">
                    <div class="card p-2">
                        <div class="row card-title-row mb-2 sm-hide">
                            <div class="col-6 col-lg-2">Rol Adı</div>

                            <div class="col-lg-12">
                                <hr class="mt-1 mb-0" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="content-col w-100 pb-5">
    <form asp-controller="Admin" asp-action="RoleCreate">
        <div class="container-fluid">
            <div class="col-12">
                <div class="row">
                    <div class="col-12 col-lg-10">
                        <div class="page-baslik">
                            <h2 class="mb-3 mt-3">Rol Listesi</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 ">
                    <div class="card p-2">
                        <div class="boxes-header pad-b-sm">
                            <div data-toggle="modal" data-target="#mezunTanimlamaModal" class="add-btn"><a href="#"><i class="fas fa-plus"></i></a></div>
                        </div>
                        <div class="row card-title-row mb-2 sm-hide">
                            <div class="col-6 col-lg-2">Rol Adı</div>
                            <div class="col-lg-12">
                                <hr class="mt-1 mb-0" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
