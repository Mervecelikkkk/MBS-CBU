@model IEnumerable<MezunBilgiSistemi.Areas.Identity.Data.MBSUser>

@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}
<div class="content-col w-100 pb-5">

<div class="container-fluid">
    <div class="col-12">
        <div class="row">
            @if (Model.Any())
            {
                <form method="post">
                    <a href="~/Admin/NewUser" class="btn btn-primary mb-3" style="width:auto">
                        Yeni Kullanıcı Ekle
                    </a>
                </form>
                <table class="table table-bordered">
                    <tr>
                        <th style="color:red">İsim</th>
                        <th style="color:red">Soyisim</th>
                        <th style="color:red">Adres</th>
                        <th style="color:red">Tc No</th>
                        <th style="color:red">Doğum Tarihi</th>
                        <th style="color:red">Telefon No</th>
                        <th style="color:red">Cinsiyet</th>
                        <th style="color:red">Bölüm</th>
                        <th style="color:red">Meslek</th>
                        <th style="color:red">Email Onayı</th>
                        <th style="color:red">Anasayfa Durumu</th>
                        <th style="color:red"></th>
                        <th style="color:red"></th>
                    </tr>
                    @foreach (var user in Model)
                    {
                <tr>
                    <th>@user.FirsName</th>
                    <th>@user.LastName</th>
                    <th>@user.Address</th>
                    <th>@user.IdentificationNumber</th>
                    <th>@user.DateOfBirth</th>
                    <th>@user.PhoneNumber</th>
                    <th>@user.Gender</th>
                    <th>@user.Department</th>
                    <th>@user.Business</th>
                    <th>@user.EmailConfirmed</th>
                    <th>@user.IsHome</th>
                    <div class="col-6 col-lg-2   mt-1 mb-1" style="">
                        <a class="mr-2" asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id"><i class="fas fa-edit" style="color:cornflowerblue;"></i></a>
                        <a asp-action="DeleteEtkinlik" asp-route-id="@user.Id">
                            <i class="fas fa-trash-alt" style="color:#d10404; "></i>
                        </a>
                    </div>
                    <th><a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Güncelle</a></th>
                    <th>
                        <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </form>
                    </th>
                </tr>
                    }
                </table>

            }
            else
            {
                <table class="table table-bordered">
                    <tr>
                        <th style="color:black">İsim</th>
                        <th style="color:black">Soyisim</th>
                        <th style="color:black">Adres</th>
                        <th style="color:black">Tc No</th>
                        <th style="color:black">Doğum Tarihi</th>
                        <th style="color:black">Telefon No</th>
                        <th style="color:black">Cinsiyet</th>
                        <th style="color:black">Bölüm</th>
                        <th style="color:black">Meslek</th>
                        <th style="color:black">Anasayfa Durumu</th>
                    </tr>
                    <tr>
                        <th>Henüz Rol Oluşturulmadı!</th>
                        <th>
                            <form method="post">
                                <a href="~/Admin/NewUser" class="btn btn-primary mb-3" style="width:auto">
                                    Yeni Kullanıcı Ekle
                                </a>
                            </form>
                        </th>
                    </tr>
                </table>
            }
