    <!--CUSTOM MAIN STYLES-->
    <link href="~/css/custom.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/layout.css" rel="stylesheet" asp-append-version="true" />
    <!-- GOOGLE FONTS-->
