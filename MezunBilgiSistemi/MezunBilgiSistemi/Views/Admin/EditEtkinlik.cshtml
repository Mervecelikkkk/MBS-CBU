@model MezunBilgiSistemi.Models.Etkinlikler
@{
    ViewData["Title"] = "EditEtkinlik";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<h2>Etkinliği Güncelle</h2>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Etkinlik Başlığı</label>
        <div class="col-sm-10">
            <input asp-for="EtkinlikAd" class="form-control">
            <span asp-validation-for="EtkinlikAd" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Etkinlik Açıklaması</label>
        <div class="col-sm-10">
            <textarea asp-for="EtkinlikAciklama" class="form-control"></textarea>
            <span asp-validation-for="EtkinlikAciklama" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Fotoğraf Seçiniz</label>
        <div class="col-sm-10">
            @*<input hidden asp-for="EtkinlikFotoLink">
                <img src="~/img/Etkinlikler/@Model.EtkinlikFotoLink" width="80" height="80" />
                <input type="file" name="file">*@
        </div>
    </div>
    <div class="custom-control custom-checkbox">
        <input asp-for="IsHome" type="checkbox" class="custom-control-input">
        <label asp-for="IsHome" class="custom-control-label">Anasayfada Görün</label>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="Etkinlikler" class="btn btn-primary">İptal</a>
        </div>
    </div>
</form>
