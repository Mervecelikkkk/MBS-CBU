@using Microsoft.AspNetCore.Identity
@using MezunBilgiSistemi.Areas.Identity.Data

@inject SignInManager<MBSUser> SignInManager
@inject UserManager<MBSUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var girisYapanKullanici = await UserManager.GetUserAsync(User);
    <div asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul>
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Merhaba @UserManager.GetUserName(User)! </a>
                @if (girisYapanKullanici.ProfilePicture == null)
                {
                    <img src="~/profile.png" class="rounded-circle" height="40" width="40" />
                }
                <img src="~/images/user/@girisYapanKullanici.ProfilePicture"
                     class="rounded-circle"
                     height="40" width="40"
                     asp-append-version="true" />
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </div>
}
else
{
   
            <!-- ################################################################################################ -->
          
                <ul class="">
                    <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                    <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                </ul>
          
             
                }
